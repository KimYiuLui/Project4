<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Prototype1"
             x:Class="Prototype1.MainPage" NavigationPage.HasNavigationBar="False" BackgroundImage="{DynamicResource backgroundImg}">
    <StackLayout x:Name="MasterLayout" Spacing="20" Padding="0,5,0,0">
        <Image Source="Logo.png" Margin="50,20,50,20" WidthRequest="200" HeightRequest="200"/>
        <StackLayout x:Name="LogoField" Padding="0,0,0,0">
            <Button Text="Zoeken" Clicked="ZoekBtnClicked"
                    BorderRadius="10" BorderWidth="1" BorderColor="Black" 
                    HorizontalOptions="Center" VerticalOptions="Center" 
                    WidthRequest="200" FontAttributes="Bold"/>
            <Button Text="Voorkeurtest" Clicked="TestBtnClicked"
                    BorderRadius="10" BorderWidth="1" BorderColor="Black" 
                    HorizontalOptions="Center" VerticalOptions="Center" 
                    WidthRequest="200" Margin="0,5,0,0" FontAttributes="Bold"/>
            <Button Text="Willekeurig" Clicked="RandomBtnClicked"
                    BorderRadius="10" BorderWidth="1" BorderColor="Black" 
                    HorizontalOptions="Center" VerticalOptions="Center"
                    WidthRequest="200" Margin="0,5,0,0" FontAttributes="Bold"/>
            <Button Text="Favorieten Lijst" Clicked="FavBtnClicked"
                    BorderRadius="10" BorderWidth="1" BorderColor="Black" 
                    HorizontalOptions="Center" VerticalOptions="Center"
                    WidthRequest="200" Margin="0,5,0,0" FontAttributes="Bold"/>
        </StackLayout>
        <Button Image="IconInstelling.png" Clicked="SettingBtnClicked"
                BorderRadius="22" BorderWidth="1" BorderColor="Black" 
                HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" 
                Margin="10" WidthRequest="44" HeightRequest="44"/>
    </StackLayout>
</ContentPage>
